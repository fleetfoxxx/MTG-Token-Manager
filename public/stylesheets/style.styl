body
  padding: 0px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.token-element
   display:inline-block
   width:200px
   height:280px
   margin: 1px
   cursor: pointer
   transform: rotate(0deg)
   transition: all 1s

.token-tapped
   width: 280px
   height: 200px
   transform: rotate(90deg)
   margin: 0 0 40px -40px
   /*margin: 0 45px*/

@media only screen and (min-device-width:320px) and (max-device-width:736px)
   .token-element
      width:100px
      height:140px
   .token-tapped
      width:140px
      height:100px

